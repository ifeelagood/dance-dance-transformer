{
    
    "common": {
        "name": "dance-dance-transformer",
        "seed": 42
    },

    "paths": {
        "data": "data",
        "raw": "data/raw",
        "manifest": "data/manifest.json",
        "stats": "stats.npz",
        "logs": "lightning_logs",
        "checkpoints": "checkpoints",
        "shards": "data/webdataset",
        "info": "data/info.json"
    },

    "dataset": {
        "packs": ["fraxtil", "itg"],
        "urls": {
            "fraxtil": [
                "https://fra.xtil.net/simfiles/data/tsunamix/III/Tsunamix III [SM5].zip", 
                "https://fra.xtil.net/simfiles/data/arrowarrangements/Fraxtil's Arrow Arrangements [SM5].zip", 
                "https://fra.xtil.net/simfiles/data/beastbeats/Fraxtil's Beast Beats [SM5].zip"
            ],
            
            "itg": [
                "https://search.stepmaniaonline.net/link/In The Groove 1.zip",
                "https://search.stepmaniaonline.net/link/In The Groove 2.zip"
            ]
        },

        "shard": {
            "size": 10,
            "name": "{split}-{index}.tar",
            "zero_pad": 3
        }

    },

    "audio": { 
        "sample_rate": 44100,
        "n_ffts": [1024, 2048, 4096],
        "hop_length": 441,
        "n_bins": 80,
        "fmin": 27.5,
        "fmax": 16000.0,
        "log": true,
        "log_eps": 1e-6,
        "normalize": true
    },
        
    "charts": {
        "types": ["dance-single"],
        "difficulties": ["Beginner", "Easy", "Medium", "Hard", "Challenge"]
    },

    "onset": {
        "context_radius": 7,
        "sequence_stride": 1,
        "threshold": 0.01
    },

    "hyperparameters": {
        "batch_size": 256,
        "epochs": 100,
        "learning_rate": 0.1,
        "dropout": 0.5,
        "weight_decay": 0,
        "momentum": 0,
        "optimizer": "SGD",
        "gradient_clip": 5.0 
    },

    "callbacks": {
        "lr_monitor": true,

        "early_stopping":
        {
            "enable": false,
            "monitor": "valid/step_loss",
            "mode": "min",
            "patience": 20
        },

        "checkpoint": {
            "enable": true,
            "monitor": "valid/epoch_precision",
            "top_k": 3
        }
    },

    "dataloader": {
        "num_workers": 0,
        "pin_memory": true
    },

    "device": {
        "accelerator": "gpu",
        "devices": 1,
        "strategy": null
    }
}