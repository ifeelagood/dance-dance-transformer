{
    
    "common": {
        "name": "dance-dance-transformer",
        "seed": 42
    },

    "paths": {
        "data": "data",
        "raw": "data/raw",
        "manifest": "data/manifest.json",
        "stats": "data/stats.npz",
        "logs": "lightning_logs",
        "checkpoints": "checkpoints"
    },

    "dataset": {
        "packs": ["fraxtil", "itg"],
        "urls": {
            "fraxtil": [
                "https://fra.xtil.net/simfiles/data/tsunamix/III/Tsunamix III [SM5].zip", 
                "https://fra.xtil.net/simfiles/data/arrowarrangements/Fraxtil's Arrow Arrangements [SM5].zip", 
                "https://fra.xtil.net/simfiles/data/beastbeats/Fraxtil's Beast Beats [SM5].zip"
            ],
            
            "itg": [
                "https://search.stepmaniaonline.net/link/In The Groove 1.zip",
                "https://search.stepmaniaonline.net/link/In The Groove 2.zip"
            ]
        }
    },

    "audio": { 
        "sample_rate": 44100,
        "n_ffts": [1024, 2048, 4096],
        "hop_length": 441,
        "n_bins": 80,
        "fmin": 27.5,
        "fmax": 16000.0,
        "log": true,
        "log_eps": 1e-6,
        "mean": 3.7581453,
        "std": 3.222148
    },
        
    "charts": {
        "types": ["dance-single"],
        "difficulties": ["Beginner", "Easy", "Medium", "Hard", "Challenge"]
    },

    "onset": {
        "sequence_length": 15,
        "threshold": 0.01
    },

    "hyperparameters": {
        "batch_size": 256,
        "epochs": 100,
        "learning_rate": 1e-4,
        "dropout": 0.5,
        "l2": 1e-3,
        "optimizer": "Adam"
    },

    "train": {
        "accelerator": "gpu",
        "devices": 1,
        "strategy": "DP",
        "num_workers": 0,
        "pin_memory": false,
        "find_batch_size": true,
        "find_lr": true,
        "checkpoint": true,
        "top_k": 3,
        "early_stopping": false,
        "patience": 10
    }
}